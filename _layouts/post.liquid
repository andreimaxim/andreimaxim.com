---
layout: default
---
{%- assign date_format = site.date_format | default: "%B %d, %Y" -%}

<article>
    <header>
        <h1>
            <a href="{{ page.url | absolute_url }}">{{ page.title }}</a>
        </h1>
        <time datetime="{{ page.date | date_to_xmlschema }}">{{ page.date | date: date_format }}</time>
    </header>

    {{ content }}
</article>
